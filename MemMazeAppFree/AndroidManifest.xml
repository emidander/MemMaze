<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.memmaze.free"
      android:versionCode="7"
      android:versionName="1.7">
      
	<uses-permission android:name="android.permission.VIBRATE" />
	<supports-screens android:smallScreens="false" />
	<uses-sdk android:minSdkVersion="7" />
    
      <application android:name="org.memmaze.MemMazeApplication" android:label="@string/app_name" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:icon="@drawable/ic_launcher_memmaze">
        <activity android:label="@string/app_name" android:name="org.memmaze.MainMenuActivity"
                          android:screenOrientation="portrait" 
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<activity android:name="org.memmaze.MemMazeActivity" 
    			  android:screenOrientation="portrait" 
	              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
	              android:launchMode="singleTop"></activity>
    	<activity android:name="org.memmaze.SelectLevelActivity"></activity>
    </application>

</manifest>
